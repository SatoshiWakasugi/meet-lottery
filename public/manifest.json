{
  "manifest_version": 3,
  "name": "Meet Picker",
  "version": "1.0",
  "description": "This is a Google Chrome extension that allows you to nominate one person from among the participants of a Google Meet meeting.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": ["scripting", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "host_permissions": ["https://*/*"]
}
